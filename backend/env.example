
"""
- This is an example .env file for the backend.
- Copy this to .env and fill in real secrets.
- Used by core/settings.py via pydantic-settings.
"""

# --- Database ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=chat_app_poc
# optional: DATABASE_URL=postgresql+psycopg2://...

# --- JWT / Cookies ---
JWT_SECRET=replace_me_access_secret
JWT_REFRESH_SECRET=replace_me_refresh_secret
ACCESS_TOKEN_MINUTES=15
REFRESH_TOKEN_DAYS=30
COOKIE_SECURE=false

# --- Super Admin bootstrap ---
SUPER_ADMIN_EMAIL=super.admin@example.com
SUPER_ADMIN_NAME=Super Admin
SUPER_ADMIN_PASSWORD=superadmin@123

# --- OpenAI ---
OPENAI_API_KEY=sk-xxxx

# --- CORS ---
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# --- Storage base (documents go under storage/...) ---
STORAGE_ROOT=storage

# --- App switches ---
EXPOSE_TOOLS_HTTP=false
CHAT_MODEL=gpt-4o-mini
